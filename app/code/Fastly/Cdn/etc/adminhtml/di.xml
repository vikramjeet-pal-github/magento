<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Backend\Block\Dashboard\Grids" type="Fastly\Cdn\Block\Dashboard\Grids"/>
    <type name="Magento\PageCache\Model\System\Config\Source\Application">
        <plugin name="fastly-add-application-option" type="Fastly\Cdn\Model\System\Config\Source\ApplicationPlugin"/>
    </type>
    <type name="Fastly\Cdn\Controller\Adminhtml\FastlyCdn\ExportVarnishConfig">
        <arguments>
            <argument name="config" xsi:type="object">Fastly\Cdn\Model\Config</argument>
        </arguments>
    </type>
    <type name="Magento\Config\Model\Config">
        <plugin name="fastly_config_after_save" type="Fastly\Cdn\Model\Config\ConfigRewrite"/>
    </type>
    <!--<type name="Magento\Config\Model\Config\Structure">-->
        <!--<plugin name="fastly_cdn_system_configuration" type="Fastly\Cdn\Plugin\Config\StructurePlugin"/>-->
    <!--</type>-->
</config>