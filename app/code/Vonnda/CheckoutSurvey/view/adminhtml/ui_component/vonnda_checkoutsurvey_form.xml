<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">vonnda_checkoutsurvey_form.checkoutsurvey_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Vonnda\CheckoutSurvey\Block\Adminhtml\CheckoutSurvey\Edit\BackButton" name="back"/>
			<button class="Vonnda\CheckoutSurvey\Block\Adminhtml\CheckoutSurvey\Edit\DeleteButton" name="delete"/>
			<button class="Vonnda\CheckoutSurvey\Block\Adminhtml\CheckoutSurvey\Edit\SaveButton" name="save"/>
			<button class="Vonnda\CheckoutSurvey\Block\Adminhtml\CheckoutSurvey\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>vonnda_checkoutsurvey_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>vonnda_checkoutsurvey_form.checkoutsurvey_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="checkoutsurvey_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Vonnda\CheckoutSurvey\Model\CheckoutSurvey\DataProvider" name="checkoutsurvey_form_data_source">
			<settings>
				<requestFieldName>entity_id</requestFieldName>
				<primaryFieldName>entity_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="input" name="customer_id" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Customer ID</label>
				<dataScope>customer_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="customer_email" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Customer Email</label>
				<dataScope>customer_email</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="answer" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Answer</label>
				<dataScope>answer</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="answer_details" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Answer Details</label>
				<dataScope>answer_details</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="date" name="created_at" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Created At</label>
				<dataScope>created_at</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="date" name="updated_at" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CheckoutSurvey</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Updated At</label>
				<dataScope>updated_at</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
