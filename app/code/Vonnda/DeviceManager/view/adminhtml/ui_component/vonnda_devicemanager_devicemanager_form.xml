<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">vonnda_devicemanager_devicemanager_form.devicemanager_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Vonnda\DeviceManager\Block\Adminhtml\DeviceManager\Edit\BackButton" name="back"/>
			<button class="Vonnda\DeviceManager\Block\Adminhtml\DeviceManager\Edit\DeleteButton" name="delete"/>
			<button class="Vonnda\DeviceManager\Block\Adminhtml\DeviceManager\Edit\SaveButton" name="save"/>
			<button class="Vonnda\DeviceManager\Block\Adminhtml\DeviceManager\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>vonnda_devicemanager_devicemanager_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>vonnda_devicemanager_devicemanager_form.devicemanager_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="devicemanager_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Vonnda\DeviceManager\Model\DeviceManager\DataProvider" name="devicemanager_form_data_source">
			<settings>
				<requestFieldName>entity_id</requestFieldName>
				<primaryFieldName>entity_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="input" name="serial_number" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">DeviceManager</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Serial Number</label>
				<dataScope>serial_number</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="select" name="sku" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">DeviceManager</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">SKU</label>
				<dataScope>sku</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">MH1-BBB-1</item>
                                <item name="label" xsi:type="string">MH1-BBB-1</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">MH1-BBB-1CA</item>
                                <item name="label" xsi:type="string">MH1-BBB-1CA</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">MN1B-US</item>
                                <item name="label" xsi:type="string">MN1B-US</item>
                            </option>
							<option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">SQ2P-US</item>
                                <item name="label" xsi:type="string">SQ2P-US</item>
                            </option>
                        </options>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
		</field>
		<field formElement="date" name="purchase_date" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">DeviceManager</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Purchase Date</label>
				<dataScope>purchase_date</dataScope>
				<visible>true</visible>
				<validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
					<rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
			</settings>
		</field>
		<field formElement="hidden" name="customer_id" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">DeviceManager</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Customer ID</label>
				<dataScope>customer_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
