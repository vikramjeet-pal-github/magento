<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>vonnda_devicemanager_devicemanager_columns</spinner>
		<deps>
			<dep>vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add New Device</label>
			</button>
		</buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="vonnda_devicemanager_devicemanager_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Vonnda_DeviceManager::DeviceManager</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="vonnda_devicemanager_devicemanager_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>entity_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="vonnda_devicemanager_devicemanager_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">entity_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="vonnda_devicemanager/DeviceManager/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_listing.vonnda_devicemanager_devicemanager_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>entity_id</indexField>
			</settings>
		</selectionsColumn>

		<column name="entity_id">
			<settings>
				<filter>text</filter>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="serial_number">
			<settings>
				<filter>text</filter>
				<label translate="true">Serial Number</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="sku">
			<settings>
				<filter>text</filter>
				<label translate="true">SKU</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">true</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="purchase_date">
			<settings>
				<filter>text</filter>
				<label translate="true">Purchase Date</label>
				<editor>
					<editorType>date</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">true</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="customer_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Customer ID</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="created_at">
			<settings>
				<filter>text</filter>
				<label translate="true">Created At</label>
			</settings>
		</column>
		<column name="updated_at">
			<settings>
				<filter>text</filter>
				<label translate="true">Updated At</label>
			</settings>
		</column>
		 <actionsColumn name="actions" class="Vonnda\DeviceManager\Ui\Component\Listing\Column\DeviceManagerActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">entity_id</item>
                    <item name="sortOrder" xsi:type="number">9999</item>
                </item>
            </argument>
        </actionsColumn>
	</columns>
</listing>
