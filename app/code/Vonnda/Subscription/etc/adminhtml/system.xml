        </section>

        <!-- Cancel Survey Config -->
        <section id="vonnda_subscriptions_cancel_auto_refill" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Cancel Auto-Refill Configuration</label>
            <tab>vonnda_subscriptions</tab>
            <resource>Vonnda_Subscription::config</resource>
            <group id="config" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>Cancel Auto-Refill Configuration</label>
                <field id="enabled" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
                    <label>Enable</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="question" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="15" translate="label" type="text">
                    <label>Question</label>
                    <comment/>
                </field>
                <field id="answer_options" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="textarea">
                    <label>Answer Options</label>
                    <comment>Add a list of possible answers in a comma separated list style.</comment>
                </field>
                <field id="randomize_answer_options" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="25" translate="label" type="select">
                    <label>Randomize Answer Options</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>