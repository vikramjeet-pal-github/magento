<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="vonnda_subscription">
        <job name="create_subscription_customer_orders" instance="Vonnda\Subscription\Cron\CreateSubscriptionOrders" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="send_subscription_update_emails" instance="Vonnda\Subscription\Cron\SendUpdateEmails" method="execute">
            <schedule>0 2 * * *</schedule>
        </job>
        <job name="update_expired_subscriptions" instance="Vonnda\Subscription\Cron\UpdateExpiredSubscriptions" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
</config>