<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vonnda_subscription_subscriptionplan_form.subscriptionplan_form_data_source</item>
            <item name="deps" xsi:type="string">vonnda_subscription_subscriptionplan_form.subscriptionplan_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Tier Form</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Vonnda\Subscription\Block\Adminhtml\SubscriptionPlan\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Vonnda\Subscription\Block\Adminhtml\SubscriptionPlan\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Vonnda\Subscription\Block\Adminhtml\SubscriptionPlan\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Vonnda\Subscription\Block\Adminhtml\SubscriptionPlan\Edit\SaveButton</item>
        </item>
    </argument>

    <dataSource name="subscriptionplan_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Vonnda\Subscription\Ui\DataProvider\SubscriptionPlan\Form\SubscriptionPlanDataProvider</argument>
            <argument name="name" xsi:type="string">subscriptionplan_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="subscriptionPlan">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Tier</item>
            </item>
        </argument>

        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                </item>
            </argument>
        </field>

        <field name="default_promo_ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Default Promo Ids</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                </item>
            </argument>
        </field>

        <field name="subscription_products">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Subscription Products</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="id" xsi:type="string">subscription-product-input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                </item>
            </argument>
        </field>

        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Vonnda\Subscription\Model\Source\SubscriptionPlan\StatusSelect</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Status</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Sets the tier to enable or disabled.
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="visible">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Vonnda\Subscription\Model\Source\SubscriptionPlan\VisibleSelect</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Visibility</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Tiers that are hidden will not be visible on the frontend.
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Vonnda\Subscription\Model\Source\SubscriptionPlan\StoreIdSelect</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Store Id</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Select store id for subscription
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>


        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Title</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Internal name for tier, not customer facing
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="identifier">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Identifier</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        UID to identify the tier in code, confirm before changing
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="fallback_plan">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Vonnda\Subscription\Model\Source\SubscriptionPlan\FallbackSelect</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Fallback Tier Identifier</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Identifier of tier fallback, used in cron script.  Confirm before changing.
                    </item>
                </item>
            </argument>
            <settings>
            </settings>
        </field>

        <field name="short_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Short Description</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Brief description of tier, customer facing
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="long_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Long Description</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="rows" xsi:type="number">5</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Not currently linked to frontend.
                    </item>
                </item>
            </argument>
        </field>

        <field name="more_info">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">More Info</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="rows" xsi:type="number">3</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Not currently linked to frontend.
                    </item>
                </item>
            </argument>
        </field>

        <field name="frequency">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Frequency</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Integer tied to Frequency Units below. Whole number required.
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="frequency_units">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Vonnda\Subscription\Model\Source\SubscriptionPlan\FrequencyUnitSelect</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Frequency Units</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Units based on Frequency, i.e. Day, Week, Month.
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="trigger_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Trigger Sku</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        The sku of the virtual product that subscribes someone to this tier if purchased.
                    </item>
                </item>
            </argument>
        </field>

        <field name="device_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Device Sku</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        SKU that links available tiers for multi-tier selection.
                    </item>
                </item>
            </argument>
        </field>

        <field name="sort_order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Sort Order</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Order in which shown on frontend when customer is presented multiple tiers. Order is ascending.
                    </item>
                </item>
            </argument>
        </field>

        <field name="duration">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Duration</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        If left empty the tier will never expire. Value is number of successfully created subscription orders. Whole number required.
                    </item>
                </item>
            </argument>

        </field>

        <field name="number_of_free_shipments">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Number of Free Shipments</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Number of free shipments before renewal charges. Whole number required.
                    </item>
                </item>
            </argument>
        </field>

        <field name="payment_required_for_free">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Payment Method Required?</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">subscriptionPlan</item>
                    <item name="notice" xsi:type="string" translate="true">
                        Flag set if payment is required to trigger free devices.
                    </item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>