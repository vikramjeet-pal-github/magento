<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="device.edit.tab.super.grid.popup.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="device.edit.tab.super.group.popup" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">device_grid_popup</argument>
                    <argument name="dataSource" xsi:type="object">Vonnda\DeviceManager\Model\ResourceModel\DeviceManager\Grid\DeviceChooserPopupCollection</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="default_sort" xsi:type="string">entity_id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">0</argument>
                    <argument name="grid_url" xsi:type="url" path="vonnda_subscription/subscriptioncustomer/devicepopup">
                        <param name="_current">1</param>
                    </argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="device.edit.tab.super.group.popup.columnSet" as="grid.columnSet">
                    <arguments>
                        <argument name="id" xsi:type="string">device_grid_popup</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="device.edit.tab.super.group.popup.columnSet.entity_ids" as="entity_ids">
                        <arguments>
                            <argument name="type" xsi:type="string">skip-list</argument>
                            <argument name="renderer" xsi:type="string">Magento\Backend\Block\Widget\Grid\Column\Renderer\Checkbox</argument>
                            <argument name="name" xsi:type="string">entity_ids</argument>
                            <argument name="index" xsi:type="string">entity_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="device.edit.tab.super.group.popup.columnSet.id" as="entity_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">ID</argument>
                            <argument name="index" xsi:type="string">entity_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="device.edit.tab.super.group.popup.columnSet.email" as="email">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Customer Email</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">email</argument>
                            <argument name="editable" xsi:type="string">1</argument>
                            <argument name="escape" xsi:type="string">1</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="device.edit.tab.super.group.popup.columnSet.serial_number" as="serial_number">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Serial Number</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">serial_number</argument>
                            <argument name="editable" xsi:type="string">1</argument>
                            <argument name="escape" xsi:type="string">1</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="device.edit.tab.super.group.popup.columnSet.sku" as="sku">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Sku</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">sku</argument>
                            <argument name="editable" xsi:type="string">1</argument>
                            <argument name="escape" xsi:type="string">1</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
