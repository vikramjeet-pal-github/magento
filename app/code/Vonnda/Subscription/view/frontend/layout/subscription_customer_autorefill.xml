<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd"> 
    <update handle="customer_account"/> 
    <head>
        <css src="StripeIntegration_Payments::css/stripe_payments.css" />
        <css src="StripeIntegration_Payments::css/stripe_payments_elements.css" />
        <css src="StripeIntegration_Payments::css/paymentfont.min.css" />
    </head>
    <body> 
        <referenceBlock name="page.main.title"> 
                <action method="setPageTitle"> 
                    <argument translate="true" name="title" xsi:type="string">My account</argument>
                </action> 
        </referenceBlock> 
        <referenceContainer name="content"> 
            <block class="Vonnda\Subscription\Block\Customer\SubscriptionManagement" name="subscription_management" template="Vonnda_Subscription::subscription_management.phtml" cacheable="false"> 
                <block class="StripeIntegration\Payments\Block\Customer\Cards" name="add_card" template="Vonnda_Subscription::subscription_add_card.phtml" cacheable="false"/>
                <block class="StripeIntegration\Payments\Block\Customer\Cards" name="edit_card" template="Vonnda_Subscription::subscription_edit_card_autorefill.phtml" cacheable="false"/>
            </block> 
        </referenceContainer> 
    </body> 
</page>