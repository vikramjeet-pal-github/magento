    <type name="Magento\Checkout\Model\GuestShippingInformationManagement">
        <plugin name="captureRecipientEmailGuest" type="Vonnda\GiftOrder\Plugin\OneStepCheckout\GuestShippingInformationManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Checkout\Model\ShippingInformationManagement">
        <plugin name="captureRecipientEmail" type="Vonnda\GiftOrder\Plugin\OneStepCheckout\ShippingInformationManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Quote\Model\QuoteRepository\LoadHandler">
        <plugin name="addGiftOrderFields"
                type="Vonnda\GiftOrder\Plugin\Quote\LoadHandler"
                sortOrder="10"/>
    </type>
</config>
