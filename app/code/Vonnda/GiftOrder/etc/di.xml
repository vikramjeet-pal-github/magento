<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Sales\Block\Adminhtml\Order\Address\Form" type="Vonnda\GiftOrder\Block\Sales\Adminhtml\Order\Address\Form" />
    <preference for="Magento\Sales\Controller\Adminhtml\Order\AddressSave"
        type="Vonnda\GiftOrder\Controller\Adminhtml\Order\AddressSave" />
    <preference for="Magento\Sales\Model\ResourceModel\Order\Grid\Collection"
        type="Vonnda\GiftOrder\Model\Sales\ResourceModel\Order\Grid\Collection" />

    <preference for="Vonnda\GiftOrder\Api\GiftOrderServiceInterface"
        type="Vonnda\GiftOrder\Model\GiftOrderService" />
    <preference for="Vonnda\GiftOrder\Api\Data\GiftOrderDataInterface"
        type="Vonnda\GiftOrder\Model\GiftOrderData" />

    <preference for="Magento\Sales\Block\Adminhtml\Order\View\Info"
        type="Vonnda\GiftOrder\Block\Sales\Adminhtml\Order\View\Info" />
    
    <!-- Plugins -->
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="vonnda_gift_order_plugin_order_repository" type="Vonnda\GiftOrder\Plugin\Sales\OrderRepositoryPlugin"/>
