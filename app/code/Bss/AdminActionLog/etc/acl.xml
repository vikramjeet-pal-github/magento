<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Bss_AdminActionLog::log" title="Admin Action Log" sortOrder="0">
                    <resource id="Bss_AdminActionLog::action_log" title="Action Logs Grid" sortOrder="1"/>
                    <resource id="Bss_AdminActionLog::login_log" title="Login Action Grid" sortOrder="2"/>
                    <resource id="Bss_AdminActionLog::visit_log" title="Page Visit History" sortOrder="3"/>
                    <resource id="Bss_AdminActionLog::active_session_log" title="Active Sessions" sortOrder="4"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_AdminActionLog::config" title="BSS Admin Action Log" sortOrder="0" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>