<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
   <listingToolbar name="listing_top">
        <massaction name="listing_massaction" class="Grazitti\Maginate\Ui\Component\Listing\Column\MassActionCustomer">
        <action name="customer_sync">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="type" xsi:type="string">customer_sync</item>
                            <item name="label" xsi:type="string" translate="true">Sync With Marketo</item>
							<item name="url" xsi:type="url" path="maginate/order/masssync"/>
							<item name="sortOrder" xsi:type="number">10</item>
                        </item>
                    </argument>
                </action>
        </massaction>
</listingToolbar>
    <columns name="customer_columns" class="Magento\Customer\Ui\Component\Listing\Columns">
        <actionsColumn name="sync" class="Grazitti\Maginate\Ui\Component\Listing\Column\Sync">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">entity_id</item>
					<item name="draggable" xsi:type="string">true</item>
					<item name="label" xsi:type="string" translate="true">Maginate Sync Action</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>