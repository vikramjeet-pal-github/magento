<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd"> 
    <update handle="customer_account"/> 
    <body> 
        <referenceBlock name="page.main.title"> 
                <action method="setPageTitle"> 
                    <argument translate="true" name="title" xsi:type="string">My account</argument>
                </action> 
        </referenceBlock> 
        <referenceContainer name="content"> 
            <block class="Vonnda\Subscription\Block\Customer\SubscriptionAddressManagement" name="subscription_management" template="Vonnda_Subscription::subscription_address_management.phtml" cacheable="false"> 
                <block class="StripeIntegration\Payments\Block\Customer\Cards" name="add_card" template="Vonnda_Subscription::subscription_add_card_address_and_payment.phtml" cacheable="false"/>
                <block class="StripeIntegration\Payments\Block\Customer\Cards" name="edit_card" template="Vonnda_Subscription::subscription_edit_card.phtml" cacheable="false"/>
            </block> 
        </referenceContainer>
        <move element="page.messages" destination="content" before="-" />
    </body> 
</page>