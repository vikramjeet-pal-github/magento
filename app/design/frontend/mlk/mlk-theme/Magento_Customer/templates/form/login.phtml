<script>
    require([
        "jquery"
    ], function($) {
        $("body").on('DOMSubtreeModified', ".page.messages", function() {
            if($('.message-success.success.message').length > 0) {
                $(this).hide();
                if($('.message-success.success.message > div').html() === 'You updated your password.') {
                    $('.customer-account-login p.welcome-text').html('Welcome back. Your password has been reset.');
                } else if($('.message-success.success.message > div').html() === 'If email is tied to an account, you\'ll get an email to reset your password.') {
                    $('.customer-account-login p.welcome-text').html('An email will be sent if an account is associated with this email address.');
                }

            } else if (($('.message-error.error.message').length > 0) && ($('.mlk-login-error').length < 1)) {
                $(document).trigger('tealiumLoginFailure');
                $(this).hide();
                $('.block-customer-login .block-content').prepend('<div class="mlk-login-error">Invalid login or password.</div>');
            }
        });
    });
</script>

